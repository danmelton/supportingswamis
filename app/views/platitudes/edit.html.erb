<h1>Editing platitude</h1>

<% form_for(@platitude) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :platitude %><br />
    <%= f.text_field :platitude %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

